pipeline {
    agent any
    tools {
        maven "M3"
    }
    stages {
        stage('GitClone') {
            steps {
                git branch: 'main', url: 'https://github.com/brahimhamdi/petclinic'
            }
        }
        stage('Build') {
            steps {
                script
                {
                    if (isUnix()) 
                    {
                        sh 'mvn -fn clean package'
                    }
                    else
                    {
                        bat 'mvn -fn clean package'
                    }
                 }
            }
        }
    }
}
